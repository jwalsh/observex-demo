# .env.sample

# Notification Settings
NOTIFICATION_DRIVER=irc

# IRC Notification Settings
IRC_NOTIFICATION_SERVER=irc.example.com
IRC_NOTIFICATION_PORT=6667
IRC_NOTIFICATION_CHANNEL=#simulation-notifications
IRC_NOTIFICATION_NICK=SimulationBot
IRC_NOTIFICATION_USER=SimulationBot
IRC_NOTIFICATION_PASSWORD=secret

# Email Notification Settings
EMAIL_NOTIFICATION_SMTP_SERVER=smtp.example.com
EMAIL_NOTIFICATION_SMTP_PORT=587
EMAIL_NOTIFICATION_FROM_ADDRESS=simulation-bot@example.com
EMAIL_NOTIFICATION_TO_ADDRESS=simulation-team@example.com
EMAIL_NOTIFICATION_SUBJECT=Simulation Notification

# Slack Notification Settings
SLACK_NOTIFICATION_TOKEN=xoxb-123456789012-1234567890123-abc123def456
SLACK_NOTIFICATION_CHANNEL=#simulation-notifications
SLACK_NOTIFICATION_USERNAME=SimulationBot
SLACK_NOTIFICATION_ICON=:robot_face:

# Log Notification Settings
LOG_NOTIFICATION_LEVEL=info
LOG_NOTIFICATION_FILE=/var/log/simulation.log
LOG_NOTIFICATION_FORMAT=json

# PagerDuty Notification Settings
PAGERDUTY_NOTIFICATION_API_KEY=0123456789abcdef
PAGERDUTY_NOTIFICATION_SERVICE_ID=P1234567890
PAGERDUTY_NOTIFICATION_EVENT_ACTION=trigger
PAGERDUTY_NOTIFICATION_SOURCE=guile-observer
PAGERDUTY_NOTIFICATION_SEVERITY=critical
PAGERDUTY_NOTIFICATION_SUMMARY="Simulation Notification"
PAGERDUTY_NOTIFICATION_DESCRIPTION="This is a simulation notification"

# Simulator-specific Notification Settings
ANOMALY_DETECTION_SIMULATOR_NOTIFICATION_LEVEL=warn
CHAOS_ENGINEERING_SIMULATOR_NOTIFICATION_LEVEL=info
CICD_PIPELINE_SIMULATOR_NOTIFICATION_LEVEL=info
CLOUD_COST_OPTIMIZER_SIMULATOR_NOTIFICATION_LEVEL=warn
DEVELOPER_PRODUCTIVITY_SIMULATOR_NOTIFICATION_LEVEL=info
DIVERSITY_INCLUSION_METRICS_SIMULATOR_NOTIFICATION_LEVEL=info
DORA_METRICS_SIMULATOR_NOTIFICATION_LEVEL=info
FINANCIAL_METRICS_SIMULATOR_NOTIFICATION_LEVEL=warn
LOG_AGGREGATION_SIMULATOR_NOTIFICATION_LEVEL=info
MARKETING_CONVERSION_METRICS_SIMULATOR_NOTIFICATION_LEVEL=info
MULTI_REGION_FAILOVER_SIMULATOR_NOTIFICATION_LEVEL=warn
OBSERTEX_SIMULATOR_NOTIFICATION_LEVEL=info
RECRUITMENT_PIPELINE_SIMULATOR_NOTIFICATION_LEVEL=info
SCRUM_METRICS_SIMULATOR_NOTIFICATION_LEVEL=info
SRE_SIMULATOR_NOTIFICATION_LEVEL=warn

# Logging Settings
LOG_VERBOSITY=info
LOG_COLORIZE=true
LOG_PREFIX="[SIMULATION] "


